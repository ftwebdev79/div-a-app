{% extends 'back/base.html.twig' %}

{% block title %}Styles{% endblock %}

{% block body %}
<div class="container admin_content">
    <h3 class="content_title">Les styles musicaux</h3>
    {% for style in styles %}
    <div class="card_style" style="width: 18rem;">
        <img class="card-img-top" src="{{ asset('images/genre/' ~style.image) }}" alt="Card image cap">
        <div class="card-body">
            <p class="card_name">{{ style.name }}</p>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}