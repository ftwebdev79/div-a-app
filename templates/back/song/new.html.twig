{% extends 'back/base.html.twig' %}

{% block title %}Hello ArtistController!{% endblock %}

{% block body %}

    <div class="container">
        <h2>Ajouter un artiste</h2>
        <div class="form">
            <form method="post" enctype="multipart/form-data">

                {{ form_start(form) }}

                {{ form_label(form.title) }}
                {{ form_widget(form.title, {'attr': {"class": "form-control"}}) }}

                {{ form_label(form.duration) }}
                {{ form_widget(form.duration,  {'attr': {"class": "form-control"}}) }}

                {{ form_label(form.albums) }}
                {{ form_widget(form.albums,  {'attr': {"class": "form-control"}}) }}

                {{ form_label(form.artists) }}
                {{ form_widget(form.artists,  {'attr': {"class": "form-control"}}) }}

                {{ form_label(form.styles) }}
                {{ form_widget(form.styles,  {'attr': {"class": "form-control"}}) }}


                {{ form_label(form.audioFile) }}
                {{ form_widget(form.imageFile,  {'attr': {"class": "form-control"}}) }}

                <button class="btn btn-lg" type="submit">
                    Ajouter
                </button>
                {{ form_end(form) }}
            </form>

        </div>
    </div>

{% endblock %}
