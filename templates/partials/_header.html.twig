<header class="user_header">
    <div class="logo">
        <img src="{{ asset('/images/logo (2).png') }}" alt="logo-div-a"/>
    </div>

    <div class="header_title">
        <h1>DIV-A, opensource streaming !</h1>
    </div>


    {% if app.user and not is_granted('ROLE_ADMIN') %}
        <div class="logout">
            <a class="btn btn_logout" href="{{ path('app_logout') }}">Log Out</a>
        </div>
    {% elseif is_granted('ROLE_ADMIN') %}
        <div class="connexion">
            <a class="btn btn_logout" href="{{ path('app_logout') }}">Log Out</a>
            <a class="btn btn_login" href="{{ path('app_user_list') }}">Admin</a>
        </div>
    {% endif %}
    {% if not app.user %}
        <div class="connexion">
            <a class="btn btn_login" href="{{ path('app_login') }}">Log in</a>
            <a class="btn btn_register" href="{{ path('app_register') }}">Inscription</a>
        </div>
    {% endif %}

</header>
